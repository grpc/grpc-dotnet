@page "/counter"
@inject GrpcChannel Channel
@using Google.Protobuf.WellKnownTypes
@using Grpc.Core

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Start</button>
<button class="btn btn-primary" @onclick="StopCount">Stop</button>

@code {
    private int currentCount = 0;
    private CancellationTokenSource? cts;

    private async Task IncrementCount()
    {
        if (cts != null)
        {
            cts.Cancel();
        }

        cts = new CancellationTokenSource();

        var client = new Count.Counter.CounterClient(Channel);
        var call = client.StartCounter(new Empty(), cancellationToken: cts.Token);

        try
        {
            await foreach (var message in call.ResponseStream.ReadAllAsync())
            {
                currentCount = message.Count;
            }
        }
        catch (RpcException ex) when (ex.StatusCode == StatusCode.Cancelled)
        {
            // Ignore exception from cancellation
        }
    }

    private void StopCount()
    {
        if (cts != null)
        {
            cts.Cancel();
        }
    }
}
